{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.getpocket.io/schema/Applicant.json",
  "description": "Applicant",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "title": "id of the role status"
    },
    "name": {
      "type": "string",
      "title": "An active applicant of the organization or institution"
    },
    "application_date": {
      "type": "string",
      "format": "date",
      "title": "Date applied"
    },
    "application_id": {
      "type": "string",
      "title": "id of the application"
    },
    "application_external_id": {
      "type": "string",
      "title": "external id of the application"
    },
    "assets": {
      "type": "array",
        "items": {
          "title": "ids of any asset credentials for any attachments, if any"
        }
    },
    "comments": {
      "type": "string",
      "title": "Any text associated with specific applicant status"
    }
  }
}