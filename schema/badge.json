{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#CONTEXT#/Badge",
  "description": "Badge",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "title": "id of credential"
    },
    "badge_type_id": {
      "type": "string",
      "title": "id of badge type that contains all the badge metadata"
    },
    "label": {
      "type": "string",
      "title": "Name of award: award_type(name)"
    },
    "award_date": {
      "type": "string",
      "format": "date",
      "title": "award date as long"
    }
  },
  "required": [
    "id",
    "award_type_id",
    "label",
    "award_date"
  ],
  "additionalProperties": false
}