    "achievementType": {
      "type": "string",
      "title": "achievementType for badge it needs to be `Badge`"
    },
    "name": {
      "type": "string",
      "title": "Name of award: award_type(name)"
    },
    "description": {
      "type": "string",
      "title": "description of award: award_type(description)"
    },
    "credentialSubject": {
      "$ref": "https://schemas.getpocket.io/schema/openbadges/AchievementSubject.json"
    }
  },
  "required": [
    "id",
    "achievementType",
    "name",
    "credentialSubject"
  ],
  "additionalProperties": false
